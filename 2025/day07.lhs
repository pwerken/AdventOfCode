Analyze your manifold diagram. How many times will the beam be split?

>
> import Helpers
>
> type Lasers = [Int]
> type Splitters = [Int]
> type Problem = (Lasers, [Splitters])
>
> parse :: String -> Problem
> parse = mapTuple (indexesOf 'S') (map (indexesOf '^')) . uncons . lines
>   where
>     indexesOf c = map fst . filter ((==) c . snd) . zipWith (,) [1..]
>
> moveBeam :: Lasers -> Splitters -> Lasers
> moveBeam ls ss = dedup . concatMap (flip beamHitSplitter ss) $ ls
>   where
>     beamHitSplitter :: Int -> Splitters -> Lasers
>     beamHitSplitter l ss
>       | l `elem` ss = [l - 1, l + 1]
>       | otherwise   = [l]
>
> shootLaser :: Problem -> [Lasers]
> shootLaser = uncurry (scanl moveBeam)
>
> countHits :: Problem -> Int
> countHits p@(_, gr) = sum $ zipWith rowHit (shootLaser p) gr
>   where
>     rowHit :: Lasers -> Splitters -> Int
>     rowHit ls ss = length . filter id . map (flip elem ss) $ ls
>
> day07p1 = solve "07" (countHits . parse)
